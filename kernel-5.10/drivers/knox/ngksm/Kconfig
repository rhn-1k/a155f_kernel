config NGKSM
	bool "Next Generation Knox Security Monitor feature enable"
	depends on !SEC_FACTORY
	depends on !ARCH_QTI_VM
	default y
	help
	This enables knox securty monitor driver

config NGKPAD
	bool "Next Generation Knox Peripheral Access Detection feature enable"
	depends on UH
	depends on NGKSM
	default y
	help
	This enables Next Generation Knox Peripheral Access Detection

